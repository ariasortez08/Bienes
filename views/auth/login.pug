extends ../layout/index

block contenido
    div.py-10
    h1.text-4xl.my-10.font-bold.text-center Bienes
        span.font-normal Raices
    h2.text-center.text-2xl.font-bold=top

    div.mt-8.mx-auto.max-w-md
        .bg-white.py-8.px-4.shadow
            form.space-y-5
                div
                    label.block.text-sm.uppercase.text-gray-400.mb-2.text-center.font-bold(for="email") Email
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Correo Electronico" type="email" name="email")
                div
                    label.block.text-sm.uppercase.text-gray-400.mb-2.text-center.font-bold(for="pass") Password
                    input#pass.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Contrasena" type="password" name="pass")
                div 
                    input(class="w-1/2 bg-indigo-400 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-lg text-center" type="submit" value="Iniciar Sesion")
