extends ../layout/index

block contenido
    div.py-10
    h1.text-4xl.my-10.font-bold.text-center Bienes
        span.font-normal Raices
    h2.text-center.text-2xl.font-bold=top

    if errores 
        div(class="max-w-md mx-auto my-10") 
            each error in errores
                p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg


    div.mt-8.mx-auto.max-w-md
        .bg-white.py-8.px-4.shadow.rounded-md
            form.space-y-5(method="POST" noValidate)
                div
                    label.block.text-sm.uppercase.text-gray-400.mb-2.text-center.font-bold(for="password") Nueva Contraseña
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Nueva Contraseña" type="password" name="password")
                
                div.text-center
                    input(class="w-1/2 bg-indigo-400 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-lg text-center" type="submit" value="Cambiar Contraseña")