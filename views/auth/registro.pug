extends ../layout/index

block contenido
    div.py-10
    h1.text-4xl.my-10.font-bold.text-center Bienes
        span.font-normal Raices
    h2.text-center.text-2xl.font-bold=top
    if errores 
        div(class="max-w-md mx-auto my-10") 
            each error in errores
                p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

    div.mt-8.mx-auto.max-w-md
        .bg-white.py-8.px-4.shadow.rounded-md  
            form.space-y-5(method='POST' action='/auth/registro' noValidate)
                input(type="hidden" name="_csrf" value=csrfToken)
                div
                    label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold(for="nombre") Nombre
                    input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                div
                    label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold(for="email") Email
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Correo Electronico" type="email" name="email" value=usuario ? usuario.email : '')
                div
                    label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold(for="password") Password
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Contrasena" type="password" name="password")
                div
                    label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold(for="rep_pass") Repetir Password
                    input#rep_pass.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Repetir Contraseña" type="password" name="rep_pass")
                div.text-center
                    input(class="content-center w-1/2 bg-indigo-400 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Crear Cuenta")
                div.flex.items-center.justify-between 
                    a.text-gray-500(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesion
                    a.text-gray-500(href="/auth/resetpass") Olvide mi contraseña
                