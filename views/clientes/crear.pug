extends ../layout/index
block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")



block contenido
    div.py-1
    h2.text-center.text-2xl.font-bold=top
    if errores 
        div(class="max-w-md mx-auto my-4") 
            each error in errores
                p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

    div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
        form.space-y-8(method="POST" action="/clientes/crear" noValidate)
            div.space-y-5.t
                h3.text-lg.leading-6.font-medium.text-gray-900.text-center Informacion general del usuario

                div(class="md:flex md:gap-4 space-y-2 md:space-y-0")
                    div(class="md:w-1/3")
                        label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold(for="nombre") Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Nombre" type="text" name="nombre")
                    div(class="md:w-1/3")
                        label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Correo Electrónico " type="email" name="email")
                    div(class="md:w-1/3")
                        label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold(for="tel") teléfono
                        input#tel.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Teléfono" type="number" name="tel" min="1")
                div(class="md:flex md:gap-4 space-y-2 md:space-y-0")
                    div(class="md:w-1/3")
                        label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold(for="dni") Identificacion
                        input#dni.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Identidad Sin Guiones" type="number" name="dni" min="1")
                    div(class="md:w-1/3")
                        label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold(for="colonia") Colonia
                        select#colonia.w-full.px-3.py-2.border.border-gray-300.rounded-md.text-center(name="colonia")
                            option(value="" disabled selected) - Seleccione la colonia
                                each col in colonias
                                    option(value=col) #{col}
                    div(class="md:w-1/3")
                        label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold(for="rol") Tipo de Usuario
                        select#rol.w-full.px-3.py-2.border.border-gray-300.rounded-md.text-center(name="rol")
                            option(value="" disabled selected) - Seleccione el rol
                                each rol in roles
                                    option(value=rol) #{rol}
                div(class="md:flex md:gap-4 space-y-2 md:space-y-0")
                    div(class="md:w-1/2")
                        label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Contraseña" type="password" name="password")
                    div(class="md:w-1/2")
                        label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold(for="rep_pass") Repetir Password
                        input#rep_pass.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Repetir Contraseña" type="password" name="rep_pass")
                div(class="md:flex md:gap-4 space-y-2 md:space-y-0")
                    div(class="md:w-full")
                        label.block.text-sm.uppercase.text-gray-400.mb-2.ml-2.font-bold.text-center(for="direccion") dirección
                        input#direccion.w-full.px-8.py-10.border.border-gray-300.rounded-md.placeholder-gray-500(placeholder="Dirección del inquilino" type="text" name="direccion")
            #mapa.h-96
                div
                    p.calle
                input(type="hidden" name="calle" id="calle")
                input(type="hidden" name="lat" id="lat")
                input(type="hidden" name="lng" id="lng")
            div.text-center
                input(class="content-center w-1/2 bg-indigo-400 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Crear Usuario")

block scripts
    script(src="https://unpkg.com/leaflet@1.9.2/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")

